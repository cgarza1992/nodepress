// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  posts Post[]
}

enum PostStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
}

model Post {
  // Primary key
  id String @id @default(uuid())

  // Core fields
  title   String
  slug    String  @unique
  content Json // TipTap JSON format
  excerpt String? // Optional short description

  // Status & publishing
  status      PostStatus @default(DRAFT)
  publishedAt DateTime? // Optional (for scheduling)

  // Foreign keys (we'll add relationships next)
  authorId        String
  featuredImageId String? // Optional

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  author User @relation(fields: [authorId], references: [id], onDelete: Restrict)

}
